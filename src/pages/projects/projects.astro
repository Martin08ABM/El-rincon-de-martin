---
import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";

const { data: posts, error } = await supabase
  .from("uploadProjects")
  .select("id, title, explanation, images")
  .order("created_at", { ascending: false });

if (error) {
  console.error("Error fetching posts:", error.message);
}
console.log("Fetched posts:", posts);

// Función para formatear la fecha
const formatDate = (timestamp) => {
  if (!timestamp) return '';
  return new Date(timestamp).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title="Blog - El Rincón de Martin">
  <main class="p-4 md:p-8 flex-grow">
    <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center">Blog</h1>
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead class="bg-gray-100 w-full justify-between">
            <tr class="justify-between">
              <th class="p-4 font-bold">Título</th>
              <th class="p-4 font-bold">Explicación</th>
              <th class="p-4 font-bold">Imagenes</th>
            </tr>
          </thead>
          <tbody>
            {
              posts && posts.length > 0 ? (
                posts.map((post) => {
                  console.log("Rendering post:", post);
                  return (
                    <tr class="border-t hover:bg-gray-50">
                      <td class="p-4"><a href={`/projects/${post.id}`} class="text-orange-500 hover:underline">{post.title}</a></td>
                      <td class="p-4">{post.explanation}</td>
                      <td class="p-4"><img src={post.images} alt={post.title} class="w-20 h-20 object-cover"/></td>
                    </tr>
                  );
                })
              ) : (
                <tr>
                  <td colspan="4" class="p-4 text-center text-gray-500">
                    No hay posts para mostrar.
                  </td>
                </tr>
              )
            }
          </tbody>
        </table>
      </div>
    </div>
  </main>
</Layout>