{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- CAMBIOS CLAVE AQUÍ ---
    // La raíz para las importaciones (lo que sigue a 'baseUrl')
    "baseUrl": "src", 
    // Los alias (accesos directos) para las importaciones
    "paths": {
      // Alias general: cualquier cosa bajo "@/..." apunta al contenido de "src/"
      "@/*": ["./*"], 
      // Alias específico para componentes (sugerido para mayor claridad)
      "@/components/*": ["components/*"] 
    }
    // -------------------------
  },
  // Incluir 'src/**/*' asegura que TypeScript escanee toda la carpeta 'src'
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/**/*" 
  ],
  "exclude": ["node_modules"]
}